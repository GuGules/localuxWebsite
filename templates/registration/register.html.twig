{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Créer mon compte</h1>

    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom,{label: 'Nom : '}) }}
        {{ form_row(registrationForm.prenom,{label: 'Prénom : '}) }}
        {{ form_row(registrationForm.login,{label: 'Nom d\'utilisateur : '}) }}
        {{ form_row(registrationForm.email,{label: 'Adresse Email : '}) }}
        {{ form_row(registrationForm.dateNaissance,{label: 'Date de naissance : '}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe : '}) }}
        {{ form_row(registrationForm.GDPR,{label:'Accepter la politique de confidentialité : '}) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
