{% extends 'base.html.twig' %}

{% block title %}Localux{% endblock %}

{% block stylesheets %}
  <link href="{{asset('css/offers.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-body-tertiary">
    <div class="col-md-6 p-lg-5 mx-auto my-5">
      <h1 class="display-3 fw-bold" id="title">Découvrez nos offres</h1>
  </div>
</div>
<div class="hidden-separator">.</div>
<div class="container">
  {% if not offres|length > 0 %}
    <div class="alert alert-danger">Aucune offres pour le moment...</div>
  {% else %}
    <div class="row">
      <div class="col-3"><h3>Ville de départ</h3></div>
      <div class="col-3"><h3>Ville d'arrivée</h3></div>
      <div class="col-3"><h3>Prix (en €)</h3></div>
    </div>
    <div class="hidden-separator">.</div>
    {% for offre in offres %}
      <div class="row blue-box">
        <div class="col-3">{{ offre.villeDepart }}</div>
        <div class="col-3">{{ offre.villeDestination }}</div>
        <div class="col-3">{{ offre.prix }} €</div>
        <div class="col-3"><a href="#"><button class="btn btn-primary">Réserver</button></a></div>
      </div>
      <div class="hidden-separator">-</div>
    {% endfor %}
  {% endif %}
</div>
{% endblock %}
{% block scripts %}
{% endblock %}